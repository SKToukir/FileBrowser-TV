<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/multi_thumbnail_sw_layout"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="@android:color/transparent">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:visibility="gone"
            android:background="@drawable/line" >
        </ImageView>
        <LinearLayout
            android:id="@+id/multi_thumbnail_sw_view"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_marginRight="30dip"
            android:layout_width="658dp"
            android:layout_height="102dp"
            android:layout_gravity="bottom"
            android:background="@android:color/transparent">

            <ImageView
                android:id="@+id/thumbnail_sw_first"
                android:layout_width="120dp"
                android:layout_height="102dp"
                android:visibility="gone"
                android:scaleType="centerInside"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/transparent" />

            <ImageView
                android:id="@+id/thumbnail_sw_second"
                android:layout_width="120dp"
                android:layout_height="102dp"
                android:visibility="gone"
                android:scaleType="centerInside"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/transparent" />

            <ImageView
                android:id="@+id/thumbnail_sw_third"
                android:layout_width="120dp"
                android:layout_height="102dp"
                android:visibility="gone"
                android:scaleType="centerInside"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/transparent" />

            <ImageView
                android:id="@+id/thumbnail_sw_forth"
                android:layout_width="120dp"
                android:layout_height="102dp"
                android:visibility="gone"
                android:scaleType="centerInside"
                android:textColor="@android:color/transparent" />

            <ImageView
                android:id="@+id/thumbnail_sw_fifth"
                android:layout_width="120dp"
                android:layout_height="102dp"
                android:visibility="gone"
                android:scaleType="centerInside"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/transparent" />


        </LinearLayout>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:visibility="gone"
            android:background="@drawable/line" >
        </ImageView>
    </LinearLayout>

</FrameLayout>
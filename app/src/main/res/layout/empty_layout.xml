<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:visibility="visible"
    android:id="@+id/layoutEmptyPage"
    android:orientation="vertical">


    <TextView
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="28sp"
        android:visibility="visible"
        android:id="@+id/txtCreateNew"
        android:alpha="0.5"
        android:text="This folder is empty!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:layout_marginTop="@dimen/px20"
        android:visibility="invisible"
        android:id="@+id/txtNull"
        android:textColor="#C8FFFFFF"
        android:layout_below="@+id/txtCreateNew"
        android:text="Create a new folder below."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <Button
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtNull"
        android:id="@+id/btnCreate"
        android:layout_width="@dimen/px300"
        android:textColorHighlight="#fff"
        android:layout_height="wrap_content"
        android:text="Create New"
        android:textColor="#fff"
        android:visibility="gone" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dualmodelayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/dual_mode_right_top"
        android:layout_width="55dip"
        android:layout_height="42dip"
        android:layout_weight="1"
        android:background="@drawable/player_icon_dual_pip_right_top"
        android:paddingLeft="65dip" />

    <ImageView
        android:id="@+id/dual_mode_right_bottom"
        android:layout_width="55dip"
        android:layout_height="42dip"
        android:layout_weight="1"
        android:background="@drawable/player_icon_dual_pip_right_bottom"
        android:paddingLeft="65dip" />

    <ImageView
        android:id="@+id/dual_mode_left_top"
        android:layout_width="55dip"
        android:layout_height="42dip"
        android:layout_weight="1"
        android:background="@drawable/player_icon_dual_pip_left_top"
        android:paddingLeft="65dip" />

    <ImageView
        android:id="@+id/dual_mode_left_bottom"
        android:layout_width="55dip"
        android:layout_height="42dip"
        android:layout_weight="1"
        android:background="@drawable/player_icon_dual_pip_left_bottom"
        android:paddingLeft="65dip" />

    <ImageView
        android:id="@+id/dual_mode_fullscreen"
        android:layout_width="55dip"
        android:layout_height="42dip"
        android:layout_weight="1"
        android:background="@drawable/player_icon_dual_fullscreen"
        android:paddingLeft="65dip" />

    <ImageView
        android:id="@+id/dual_mode_left_right"
        android:layout_width="55dip"
        android:layout_height="42dip"
        android:layout_weight="1"
        android:background="@drawable/player_icon_dual_left_right"
        android:paddingLeft="65dip" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLinearLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/back_image"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible" >

        <!-- 左边是四个图标 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <!-- 全部 -->
            <ImageView
                android:id="@+id/otherTitleImage"
                android:layout_width="111dp"
                android:layout_height="111dp"
                android:layout_marginTop="5dip" />

            <TextView
                android:id="@+id/otherTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/all"
                android:textColorHint="#F1F1F1"
                android:textSize="16sp" />

            <!-- 图片 -->
            <ImageView
                android:id="@+id/pictureTitleImage"
                android:layout_width="78dp"
                android:layout_height="78dp" />

            <TextView
                android:id="@+id/pictureTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/picture"
                android:textColorHint="#F1F1F1"
                android:textSize="14sp" />

            <!-- 音乐 -->

            <ImageView
                android:id="@+id/songTitleImage"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_marginTop="5dip"/>

            <TextView
                android:id="@+id/songTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/song"
                android:textColorHint="#F1F1F1"
                android:textSize="14sp" />

            <!-- 视频 -->

            <ImageView
                android:id="@+id/videoTitleImage"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_marginTop="5dip"/>

            <TextView
                android:id="@+id/videoTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/video"
                android:textColorHint="#F1F1F1"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- On the right is the video selection list -->
        <!--        android:background="@drawable/list_bg"-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"

            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical|left"
                android:orientation="horizontal" >
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:gravity="center_vertical|left"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/viewmode_img"
                        android:layout_marginTop="0dp"
                        android:layout_width="22dp"
                        android:layout_height="21dp" />
                    <Button
                        android:id="@+id/btnSwitch"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@drawable/btnswitch_shape"/>
                </LinearLayout>
                <ProgressBar
                    android:id="@+id/progress_scan"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="72dip"
                    android:layout_height="35dip"
                    android:paddingLeft="13dip"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/scanner_id"
                    android:layout_width="300dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:gravity="left|center_vertical"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textSize="18dip" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|center_vertical"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/leftArrowImg"
                        android:layout_width="20dp"
                        android:layout_height="15dp"
                        android:paddingRight="5dip"
                        android:layout_marginBottom="2dp"
                        android:src="@drawable/common_img_arrow_u" />
                    <!-- 当前的页数 -->

                    <TextView
                        android:id="@+id/videoCurrentPageNumText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:minWidth="30dp"
                        android:gravity="right"
                        android:layout_marginLeft="5dp"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/slash"
                        android:gravity="center"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:textSize="12sp" />
                    <!-- 总体的页数 -->

                    <TextView
                        android:id="@+id/videoTotalPageNumText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:minWidth="30dp"
                        android:gravity="left"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/rightArrowImg"
                        android:layout_width="20dp"
                        android:layout_height="15dp"
                        android:paddingLeft="5dp"
                        android:src="@drawable/common_img_arrow_d" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="400dip"
                android:layout_marginTop="10dip"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <!-- 视频列表 -->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ListView
                        android:id="@+id/videoFileList"
                        android:layout_width="800dp"
                        android:layout_height="500dp"
                        android:cacheColorHint="#00000000"
                        android:divider="@null"
                        android:drawSelectorOnTop="false"
                        android:listSelector="@drawable/list_selector"
                        android:scrollbars="none"
                        android:visibility="gone"
                        android:scrollingCache="true" />



                    <GridView
                        android:id="@+id/gridView"
                        android:layout_width="800dip"
                        android:layout_height="400dip"
                        android:columnWidth="70dp"
                        android:cacheColorHint="#00000000"
                        android:scrollbars="none"
                        android:gravity="center"
                        android:background="#00000000"
                        android:horizontalSpacing="15dp"
                        android:listSelector="@drawable/grid_selector"
                        android:numColumns="5"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="50dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="30dip"
                android:layout_marginTop="15dip"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.walton.filebrowser.ui.view.MarqueeTextView
                    android:visibility="invisible"
                    android:layout_width="780dip"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="3"
                    android:singleLine="true"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="horizontal" >
            <ImageView
                android:id="@+id/divxset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dip" />
        </LinearLayout>
    </LinearLayout>

    <com.walton.filebrowser.ui.view.MarqueeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#0d7497"
        android:shadowDx="0"
        android:shadowDy="-2"
        android:shadowRadius="3"
        android:id="@+id/displayInfor"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#0d7497"
        android:shadowDx="0"
        android:shadowDy="-2"
        android:shadowRadius="3"
        android:text="@string/mm_version"
        android:textColor="#ffffff"
        android:textSize="20sp" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="235dip"
    android:layout_height="140dip"
    android:background="@drawable/choose_time_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dip"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_time"
                android:textColor="#b2b2b2"
                android:textSize="20dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_duration"
                android:textColor="#b2b2b2"
                android:textSize="20dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:orientation="vertical">

            <TextView
                android:id="@+id/videoCurrentTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/video_default_time"
                android:textColor="#b2b2b2"
                android:textSize="20dip" />

            <TextView
                android:id="@+id/videoTotalDurationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/video_default_time"
                android:textColor="#b2b2b2"
                android:textSize="20dip" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="192dip"
        android:layout_height="57dip"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="12dip"
        android:background="@drawable/accurate_seek_background_bar"
        android:orientation="horizontal"
        android:paddingLeft="12dip"
        android:paddingTop="6dip"
        android:paddingRight="6dip"
        android:paddingBottom="4dip">

        <EditText
            android:id="@+id/videoTimeChooseNumOne"
            android:layout_width="22dip"
            android:layout_height="41dip"
            android:background="@drawable/accurate_seek_focus"
            android:cursorVisible="false"
            android:editable="true"
            android:gravity="center"
            android:imeOptions="actionDone|flagNoExtractUi|flagNoFullscreen"
            android:inputType="number"
            android:maxLength="2"
            android:nextFocusLeft="@+id/videoTimeChooseNumSix"
            android:nextFocusRight="@+id/videoTimeChooseNumTwo"
            android:singleLine="true"
            android:text="@string/choose_time_0"
            android:textColor="#b2b2b2"
            android:textSize="24dip" />

        <EditText
            android:id="@+id/videoTimeChooseNumTwo"
            android:layout_width="22dip"
            android:layout_height="41dip"
            android:background="@drawable/accurate_seek_focus_background"
            android:cursorVisible="false"
            android:editable="true"
            android:gravity="center"
            android:imeOptions="actionDone|flagNoExtractUi|flagNoFullscreen"
            android:inputType="number"
            android:maxLength="2"
            android:nextFocusLeft="@+id/videoTimeChooseNumOne"
            android:nextFocusRight="@+id/videoTimeChooseNumThree"
            android:singleLine="true"
            android:text="@string/choose_time_0"
            android:textColor="#b2b2b2"
            android:textSize="24dip" />

        <TextView
            android:layout_width="15dip"
            android:layout_height="41dip"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:text="@string/choose_time_colon"
            android:textColor="#b2b2b2"
            android:textSize="24dip" />

        <EditText
            android:id="@+id/videoTimeChooseNumThree"
            android:layout_width="22dip"
            android:layout_height="41dip"
            android:background="@drawable/accurate_seek_focus_background"
            android:cursorVisible="false"
            android:editable="true"
            android:gravity="center"
            android:imeOptions="actionDone|flagNoExtractUi|flagNoFullscreen"
            android:inputType="number"
            android:maxLength="2"
            android:nextFocusLeft="@+id/videoTimeChooseNumTwo"
            android:nextFocusRight="@+id/videoTimeChooseNumFour"
            android:singleLine="true"
            android:text="@string/choose_time_0"
            android:textColor="#b2b2b2"
            android:textSize="24dip" />

        <EditText
            android:id="@+id/videoTimeChooseNumFour"
            android:layout_width="22dip"
            android:layout_height="41dip"
            android:background="@drawable/accurate_seek_focus_background"
            android:cursorVisible="false"
            android:editable="true"
            android:gravity="center"
            android:imeOptions="actionDone|flagNoExtractUi|flagNoFullscreen"
            android:inputType="number"
            android:maxLength="2"
            android:nextFocusLeft="@+id/videoTimeChooseNumThree"
            android:nextFocusRight="@+id/videoTimeChooseNumFive"
            android:singleLine="true"
            android:text="@string/choose_time_0"
            android:textColor="#b2b2b2"
            android:textSize="24dip" />

        <TextView
            android:layout_width="15dip"
            android:layout_height="41dip"
            android:gravity="center"
            android:text="@string/choose_time_colon"
            android:textColor="#b2b2b2"
            android:textSize="24dip" />

        <EditText
            android:id="@+id/videoTimeChooseNumFive"
            android:layout_width="22dip"
            android:layout_height="41dip"
            android:background="@drawable/accurate_seek_focus_background"
            android:cursorVisible="false"
            android:editable="true"
            android:gravity="center"
            android:imeOptions="actionDone|flagNoExtractUi|flagNoFullscreen"
            android:inputType="number"
            android:maxLength="2"
            android:nextFocusLeft="@+id/videoTimeChooseNumFour"
            android:nextFocusRight="@+id/videoTimeChooseNumSix"
            android:singleLine="true"
            android:text="@string/choose_time_0"
            android:textColor="#b2b2b2"
            android:textSize="24dip" />

        <EditText
            android:id="@+id/videoTimeChooseNumSix"
            android:layout_width="22dip"
            android:layout_height="41dip"
            android:background="@drawable/accurate_seek_focus_background"
            android:cursorVisible="false"
            android:editable="true"
            android:gravity="center"
            android:imeOptions="actionDone|flagNoExtractUi|flagNoFullscreen"
            android:inputType="number"
            android:maxLength="2"
            android:nextFocusLeft="@+id/videoTimeChooseNumFive"
            android:nextFocusRight="@+id/videoTimeChooseNumOne"
            android:singleLine="true"
            android:text="@string/choose_time_0"
            android:textColor="#b2b2b2"
            android:textSize="24dip" />


    </LinearLayout>


</LinearLayout>